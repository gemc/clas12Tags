<gcard>

	<option name="geometry" value="1400x1200"/>

	<detector name="experiments/clas12/targets/target" factory="TEXT" variation="APOLLOnh3"/>


	<!-- Beamline FTOff configuration -->
	<detector name="experiments/clas12/ft/ft"  factory="TEXT" variation="FTOff"/>
	<detector name="beamline"                  factory="TEXT" variation="ELMO"/>
	<detector name="cadBeamlineELMO/"          factory="CAD"/>

	<!-- Downstream beamline configuration -->
	<detector name="cad_downstream_beamline/" factory="CAD"/>

	<detector name="experiments/clas12/magnets/torus"      factory="TEXT" variation="original"/>
	<detector name="experiments/clas12/fc/forwardCarriage" factory="TEXT" variation="default"/>

	<option name="OUTPUT" value="hipo, out.hipo"/>
	<option name="PHYSICS" value="STD + FTFP_BERT"/>
	<option name="RUNNO" value="11"/>
	<option name="DIGITIZATION_VARIATION" value="rga_fall2018_mc"/>


	<!--  Target and central detectors are all shifted upstream by 30 mm -->
	<detector name="PolTarg">   <position x="0*cm"     y="0*cm"     z="-3.00*cm"  />  </detector>

</gcard>
